{
  "name": "convolver-player-monorepo",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/vue/*",
    "packages/core/*",
    "packages/react/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach --all --parallel --interlaced run dev",
    "build": "yarn workspaces foreach --all --topological run build",
    "test": "yarn workspaces foreach --all --topological run test:run",
    "test:coverage": "yarn workspaces foreach --all --topological run test:run:coverage",
    "lint": "yarn workspaces foreach --all run lint",
    "typecheck": "yarn workspaces foreach --all run typecheck",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.9",
    "jsdom": "^27.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite": "latest",
    "vitest": "latest",
    "vue": "^3.3.0"
  },
  "packageManager": "yarn@4.11.0",
  "dependenciesMeta": {
    "react@19.2.0": {
      "unplugged": true
    },
    "react-dom@19.2.0": {
      "unplugged": true
    }
  }
}
