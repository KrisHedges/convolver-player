{
  "name": "@convolver-player/core",
  "version": "1.4.0",
  "type": "module",
  "description": "Core logic for Convolver Player components",
  "license": "MIT",
  "author": "Kris Hedges",
  "repository": {
    "type": "git",
    "url": "https://github.com/krishedges/convolver-player.git"
  },
  "homepage": "https://github.com/krishedges/convolver-player/tree/main/packages/core/convolver-player-core#readme",
  "bugs": {
    "url": "https://github.com/krishedges/convolver-player/issues"
  },
  "keywords": [
    "web-audio",
    "convolver",
    "impulse-response",
    "audio",
    "player"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./vitest.shared-mocks": {
      "import": "./vitest.shared-mocks.ts",
      "types": "./vitest.shared-mocks.ts",
      "default": "./vitest.shared-mocks.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:run:coverage": "vitest --coverage --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "latest"
  }
}
