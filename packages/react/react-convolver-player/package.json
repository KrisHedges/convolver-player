{
  "name": "@convolver-player/react",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/react-convolver-player.umd.cjs",
  "module": "./dist/react-convolver-player.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-convolver-player.es.js",
      "require": "./dist/react-convolver-player.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:run:coverage": "vitest --coverage --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,vue,html,md}\"",
    "preview": "vite preview"
  },
  "dependencies": {
    "@convolver-player/core": "1.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/highlight.js": "^10.1.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-oxc": "^0.4.3",
    "@vitest/coverage-v8": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "highlight.js": "^11.11.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "latest"
  },
  "resolutions": {
    "vite": "npm:rolldown-vite@7.2.2"
  }
}
