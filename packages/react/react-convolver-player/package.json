{
  "name": "@convolver-player/react",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/react-convolver-player.umd.cjs",
  "module": "./dist/react-convolver-player.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-convolver-player.es.js",
      "require": "./dist/react-convolver-player.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:run:coverage": "vitest --coverage --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,vue,html,md}\"",
    "preview": "vite preview"
  },
  "dependencies": {
    "@convolver-player/core": "file:../../core/convolver-player-core",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "highlight.js": "^11.11.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.2",
    "vitest": "latest",
    "@types/testing-library__react": "^10.2.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/highlight.js": "^10.1.0"
  },
  "resolutions": {
    "vite": "npm:rolldown-vite@7.2.2"
  }
