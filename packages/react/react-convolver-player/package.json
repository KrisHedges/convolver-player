{
  "name": "@convolver-player/react",
  "version": "0.5.1",
  "license": "MIT",
  "author": "Kris Hedges",
  "repository": {
    "type": "git",
    "url": "https://github.com/krishedges/convolver-player.git"
  },
  "homepage": "https://github.com/krishedges/convolver-player/tree/main/packages/react/react-convolver-player#readme",
  "bugs": {
    "url": "https://github.com/krishedges/convolver-player/issues"
  },
  "keywords": [
    "react",
    "web-audio",
    "convolver",
    "impulse-response",
    "audio",
    "player"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/react-convolver-player.umd.cjs",
  "module": "./dist/react-convolver-player.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-convolver-player.es.js",
      "require": "./dist/react-convolver-player.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build -c vite.config.build.ts",
    "build:lib": "tsc && vite build -c vite.config.build.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:run:coverage": "vitest --coverage --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,vue,html,md}\"",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@convolver-player/core": "workspace:^",
    "@eslint/js": "latest",
    "@testing-library/dom": "latest",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "latest",
    "@testing-library/user-event": "^14.5.2",
    "@types/highlight.js": "^10.1.0",
    "@types/node": "^24.10.0",
    "@types/react": "19.2.1",
    "@types/react-dom": "19.2.1",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "latest",
    "highlight.js": "^11.11.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.6.2",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "latest",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "latest"
  }
}
