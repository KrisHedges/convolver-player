{
  "name": "@convolver-player/vue",
  "version": "0.5.0",
  "license": "MIT",
  "author": "Kris Hedges",
  "repository": {
    "type": "git",
    "url": "https://github.com/krishedges/convolver-player.git"
  },
  "homepage": "https://github.com/krishedges/convolver-player/tree/main/packages/vue/vue-convolver-player#readme",
  "bugs": {
    "url": "https://github.com/krishedges/convolver-player/issues"
  },
  "keywords": [
    "vue",
    "web-audio",
    "convolver",
    "impulse-response",
    "audio",
    "player"
  ],
  "type": "module",
  "main": "./dist/vue-convolver-player.umd.js",
  "module": "./dist/vue-convolver-player.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-convolver-player.es.js",
      "require": "./dist/vue-convolver-player.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build -c vite.config.build.ts",
    "build:lib": "vue-tsc -b && vite build -c vite.config.build.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:run:coverage": "vitest --coverage --run",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,vue,html,md}\""
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.5.24",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@convolver-player/core": "workspace:*",
    "@eslint/js": "latest",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "latest",
    "@vitest/coverage-v8": "latest",
    "@vue/test-utils": "latest",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "latest",
    "highlight.js": "^11.11.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "latest",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "latest",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "latest"
  }
}
